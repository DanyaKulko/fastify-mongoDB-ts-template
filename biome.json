{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": ["dist/**", "node_modules/**", ".idea/**", ".vscode/**", ".DS_Store"]
	},
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"lineWidth": 120
	}
}
